{% extends "layout.html.twig" %}

{% block content %}

<h2>{{ 'positions.name'|trans({},"politics")|title }}</h2>
{% if positions is empty %}
	{{ 'positions.empty'|trans({},"politics")|raw }}
{% else %}
	{{ 'positions.description'|trans({},"politics") }}<br />
	<dl class="long">
		{% for position in positions %}
			<dt>
				{% if position.ruler and position.name == 'ruler' %}
					{{ ('realm.title.male.'~position.realm.type)|trans({},"politics")|title }} / {{ ('realm.title.female.'~position.realm.type)|trans({},"politics")|title }}
				{% else %}
					{{ position.name }} {% if position.fName %}/ {{ position.fName }}{% endif %}
				{% endif %} ({{ position.realm.name }})
			</dt>
			<dd>
				{{ position.description|markdown_to_html|striptags('<strong><em><b><i><p><br><ul><ol><li><h1><h2><h3><h4><h5><h6><blockquote><del><table><thead><tr><th><tbody><td><a><dl><dt><dd>')|wikilinks }}
				<hr />
				{% if position.ruler %}<i>{{ 'realm.positions.ruler'|trans({}, "politics") }}</i><br>{% endif %}
				<a href="{{ path('maf_politics_abdicate', {'position':position.id}) }}">{{ 'abdicate.name'|trans({},"politics") }}</a>
			</dd>
		{% endfor %}
	</dl>
{% endif %}

<br />


{% endblock %}
