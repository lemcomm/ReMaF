{% extends 'layout.html.twig' %}

{% trans_default_domain 'core' %}

{% block title %}{%trans with {'%name%': site_short, '%local%': 'security.reset.title'} %}security.reset.title{% endtrans %}{% endblock %}

{% block captcha %}
    {% include 'element/captcha_header.html.twig' %}
{% endblock %}

{% block content %}
    <h1>{% trans %}security.reset.header{% endtrans %}</h1>
    <p>{% trans %}security.reset.intro{% endtrans %}</p>

    {% if request_form %}
        {{ form_start(request_form) }}
        {{ form_row(request_form.text) }}<br>
        {% include 'element/form_captcha.html.twig' %}
        {{ form_row(request_form.submit) }}
        {{ form_end(request_form) }}
    {% else %}
        {{ form(reset_form) }}
    {% endif %}
{% endblock %}
