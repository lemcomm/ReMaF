		<a href="{{ path('maf_homepage') }}">
			<img src="{{ asset('images/logo-transparent-small.png') }}" alt="Might &amp; Fealty" />
		</a>
	</div>
{% endif %}

{% set l_german = 'de' %}
{% set l_english = 'gb' %}
{% set l_french = 'fr' %}
{% for language in app.request.languages %}
